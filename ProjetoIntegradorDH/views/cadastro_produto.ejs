<%- include('partials/header.ejs'); %>



<h1 class="Cadastro">Cadastro de Produto <span class="Prod">Prod</span><span class="Market">Market</span>
</h1>
<hr>

<form class="form-prod" action="#" method="post" >


    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="descricao">Descrição do Produto</label>
            <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Nome do Produto">
        </div>

        <div class="form-group col-md-3">
            <label for="qunatidade">Unidade de Medida</label>
            <input type="text" class="form-control" id="quantidade" name="quntidade" placeholder="CX 10 Kg">
        </div>

        <div class="form-group col-md-3">
            <label for="categoria" class="col-sm-3 control-label">Categoria</label>
            <div class="col-auto">
                <select name="categoria" id="categoria" class="form-control">

                    <option value="Aves">Aves</option>
                    <option value="Bovinos">Bovinos</option>
                    <option value="Caprinos">Caprinos</option>
                    <option value="Cereais">Cereais</option>
                    <option value="Cogumelos">Cogumelos</option>
                    <option value="Especiarias">Especiarias</option>
                    <option value="Frutas">Frutas</option>
                    <option value="Frutos do Mar">Frutos do Mar</option>
                    <option value="Grãos">Grãos</option>
                    <option value="Hortaliças">Hortaliças</option>
                    <option value="Legumes">Legumes</option>
                    <option value="Leites e Derivados">Leites e Derivados</option>
                    <option value="Mel">Mel</option>
                    <option value="Óleos e Azeites">Óleos e Azeites</option>
                    <option value="Peixes">Peixes</option>
                    <option value="Suínos">Suínos</option>
                    <option value="Raízes">Raízes</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-row">


        <div class="form-group col-md-6">
            <label for="qialificacao">Informações Gerais</label>
            <textarea name="qualificacao" id="qialificacao" cols="50" rows="6">  </textarea>
        </div>

        <div class="form-group col-md-6">
            <label for="codigo_produto">Cód. Referência</label>
            <input type="text" class="form-control" id="codigo_produto" name="codigo_produto" placeholder="Digite seu código de referência para o Produto">
            <br>
            <label for="valor">Valor (R$)</label>
            <input type="text" class="form-control" id="valor" name="valor" placeholder="Didite o Valor do Produto">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-7">
            <label for="inputImagem">Cadastrar Imagem <br>( Tamanho mínimo 400x400px, formato JPG, máximo 07
                imagens
                )</label>
            <input type="file" id="inputImagem" name="myfile" multiple>
        </div>
    </div>




    <div class="form-group col-md-2">
        <button type="submit" class="btn btn-primary">Cadastrar Item</button>
    </div>

</form>

<%- include('partials/footer.ejs'); %>